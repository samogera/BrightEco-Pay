
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own user data, including notifications
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to read and write their own notifications sub-collection
      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Allow users to read and write their own billing document
    match /billing/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read and write their own invoices
    match /billing/{userId}/invoices/{invoiceId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to create a support ticket.
    // Reading/updating/deleting should be restricted to admins.
    match /support_tickets/{ticketId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false; // Only allow admins (not yet defined)
    }
  }
}
