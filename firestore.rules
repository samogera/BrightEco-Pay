
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own user data, including notifications
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to read and write their own notifications sub-collection
      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Allow users to read and write their own billing document
    match /billing/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow users to read and write their own invoices
      match /invoices/{invoiceId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Allow users to read and write their own payment methods
      match /paymentMethods/{methodId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Allow authenticated users to create support tickets
    match /support_tickets/{ticketId} {
      allow create: if request.auth != null;
    }
  }
}
