
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own user data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow users to read and write their own notifications sub-collection
      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Allow users to read and write their own billing document
    match /billing/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow users to read and write their own invoices
      match /billing/{userId}/invoices/{invoiceId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Allow authenticated users to create support tickets, but not read/update/delete them.
    // This prevents users from seeing each other's tickets.
    // Admins would need separate backend logic or direct console access to manage these.
    match /support_tickets/{ticketId} {
      allow read, update, delete: if false; // Deny by default
      allow create: if request.auth != null;
    }
  }
}

    